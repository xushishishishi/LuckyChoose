/* pages/home/home.wxss */

page {
  background-color: rgb(248, 248, 255);
}

.body {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 16px 20px;
}

.functionWrap {
  width: 45%;
  height: 100px;
  background-color: rgb(255, 240, 245);
  border-radius: 15px;
  text-align: center;
  display: flex;
  align-items: center;
  border: 2px solid rgb(255, 182, 193);
  margin-bottom: 16px;
  justify-content: center;
}

.functionWrap:hover {
  box-shadow: 0px 0px 5px rgb(255, 106, 106);
}

.backgroundImg {
  width: 200px;
  height: 200px;
  position: fixed;
  top: 300px;
  right: 10px;
  opacity: 0.5;
}
