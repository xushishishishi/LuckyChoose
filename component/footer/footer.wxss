/* component/footer/footer.wxss */

.footerWrap {
  border-top: 1px solid rgb(255, 231, 186);
  width: 100%;
  height: 45px;
  position: fixed;
  line-height: 45px;
  font-size: 20px;
  display: flex;
  bottom: 2px;
  padding-left: 1%;
  background-color: #fff;
}

.footer {
  text-align: center;
  width: 49%;
  display: flex;
  justify-content: center;
}

.footer:first-child {
  border-right: 1px solid rgb(255, 231, 186);
}

.footerBody {
  width: 100%;
  /* border-radius: 10px; */
}

.footerBody:hover {
  box-shadow: 0px 0px 5px rgb(255, 130, 71);
}
