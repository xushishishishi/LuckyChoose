.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.body {
  padding: 16px;
  margin-bottom: 50px;
}

.form-wrap {
  display: flex;
  padding-top: 16px;
  line-height: 32px;
  font-size: 14px;
  color: rgb(39, 64, 139);
  flex-wrap: wrap;
}

.form-icon {
  font-size: 23px;
}

.form-label {
  min-width: 60px;
}

.form-input {
  border: 1px solid rgb(216, 191, 216);
  padding: 4px 8px;
  margin: 0 10px;
  border-radius: 10px;
}

.form-input:hover {
  box-shadow: 0px 0px 5px rgb(39, 64, 139);
}

.buttonWrap {
  display: flex;
  justify-content: center;
}

.buttonSubmit {
  background-color: rgb(255, 240, 245);
  border: 2px solid rgb(255, 182, 193);
  width: 150px;
  position: fixed;
  bottom: 2px;
  border-radius: 10px;
  z-index: 5;
}

.buttonSubmit:hover {
  box-shadow: 0px 0px 5px rgb(255, 106, 106);
}

.clearFloat:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}
.input-text-danger:hover {
  box-shadow: 0px 0px 5px rgb(255, 0, 0);
}
.text-danger {
  font-size: 13px;
  color: rgb(255, 0, 0);
  margin-left: 90px;
}
